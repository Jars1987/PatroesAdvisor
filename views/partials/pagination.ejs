<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">

    <% if(restaurants.prevPage){ %> 
    <li class="page-item">
      <a class="page-link" href="<%= paginateUrl %><%- restaurants.prevPage%>" tabindex="-1" aria-disabled="true">Previous</a>
    </li>
    <% } %> 

    <% if(restaurants.totalPages > 1 && restaurants.docs.length){ %> 
    <% for(let i = 1; i <= restaurants.totalPages; i++) {  %> 
    <li class="page-item <%- (i === restaurants.page) ? 'active' : ''%>"><a 
      class="page-link" 
      href="<%= paginateUrl %><%=i%>"><%= i %>
    </a>
    </li>
      <% } %> 
      <% } %> 

    <% if(restaurants.nextPage){ %> 
    <li class="page-item">
      <a class="page-link" href="<%= paginateUrl %><%=restaurants.nextPage%>">Next</a>
    </li>
    <% } %> 

  </ul>
</nav>