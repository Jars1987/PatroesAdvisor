<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">

    <% if(restaurants.page - 1){ %> 
    <li class="page-item">
      <a class="page-link" href="restaurants?page=<%- restaurants.page - 1%>" tabindex="-1" aria-disabled="true">Previous</a>
    </li>
    <% } %> 

    <% for(let i = 1; i <= restaurants.pages; i++) {  %> 
    <li class="page-item <%- (i === restaurants.page) ? 'active' : ''%>"><a 
      class="page-link" 
      href="restaurants?page=<%=i%>"><%= i %>
    </a>
    </li>
      <% } %> 

    <% if((restaurants.page + 1) <= restaurants.pages){ %> 
    <li class="page-item">
      <a class="page-link" href="restaurants?page=<%=restaurants.page + 1%>">Next</a>
    </li>
    <% } %> 

  </ul>
</nav>