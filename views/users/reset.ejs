<% layout('layouts/boilerplate') %> 


<div class="container d-flex justify-content-center align-items-center my-3">
  <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
          <div class="card shadow">
              <img src="https://images.unsplash.com/photo-1584433144859-1fc3ab64a957?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1788&q=80"
                  alt="Every day tool coposition by Dan Nelson - www.unsplash.com" class="card-img-top" />
              <div class="card-body">
                  <h5 class="card-title">Reset Password/h5>
                  <form action="/reset/<%= token %>?_method=PUT" method="POST" class="validated-form">
                      <div class="mb-3">
                          <label class="form-label" for="password">New Password</label>
                          <input class="form-control" type="password" id="password" name="password" placeholder="Password" autofocus required>
                      </div>
                      <div class="mb-3">
                        <label class="form-label" for="confirm">Confirm Pas</label>
                        <input class="form-control" type="password" id="confirm" name="confirm" placeholder="Confirm Password" required>
                    </div>
                      <div class="mb-3">
                          <input class="btn btn-success" type="submit" value="Update Password">
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>