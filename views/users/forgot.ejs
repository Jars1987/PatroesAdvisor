<% layout('layouts/boilerplate') %> 

<div class="container d-flex justify-content-center align-items-center my-3">
  <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
          <div class="card shadow">
              <img src="https://images.unsplash.com/photo-1593626242377-14fcff197583?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80"
                  alt="Command key by Raphael Nogueira - www.unsplash.com" class="card-img-top" />
              <div class="card-body">
                  <h5 class="card-title">Forgot Password</h5>
                  <form action="/forgot-password?_method=PUT" method="POST" class="validated-form">
                      <div class="mb-3">
                          <label class="form-label" for="email">Email</label>
                          <input class="form-control" type="text" id="email" name="email" autofocus required>
                          <div class="valid-feedback">
                              Looks good!
                          </div>
                      </div>
                      <div class="mb-3">
                          <input class="btn btn-success" type="submit" value="Reset Password">
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>