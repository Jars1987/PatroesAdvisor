<% layout('layouts/boilerplate') %> 

<div class="container d-flex justify-content-center align-items-center my-5">
  <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
          <div class="card shadow">
              <img src="https://images.unsplash.com/photo-1556741533-6e6a62bd8b49?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80"
                  alt="" class="card-img-top" />
              <div class="card-body">
                  <h5 class="card-title">Sign Up</h5>
                  <form action="/register" method="POST" id="profileRegister" class="validated-form" enctype="multipart/form-data" novalidate>
                      <div class="mb-3">
                          <label class="form-label" for="username">Username</label>
                          <input class="form-control" type="text" id="username" name="username" placeholder="username" required autofocus>
                          <div class="valid-feedback">
                              Looks good!
                          </div>
                      </div>
                      <div class="mb-3">
                          <label class="form-label" for="email">Email</label>
                          <input class="form-control" type="email" id="email" name="email" required>
                          <div class="valid-feedback">
                              Looks good!
                          </div>
                      </div>
                      <div class="mb-3">
                          <label class="form-label" for="password">Password</label>
                          <input class="form-control" type="password" id="password" name="password" required>
                          <div class="valid-feedback">
                              Looks good!
                          </div>
                      </div>

                      <div class="mb-3"> 
                        <label for="profilePic" class="form-label">Add a Profile Picture:</label>
                        <input class="form-control" type="file" name="image" id="profilePic" required>
                        <div class="invalid-feedback"> Image required to Sign Up a new User</div>
                
                      </div>
                      <div class="d-grid">
                        <button class="btn btn-success">Register</button>
                      </div>
                      
                  </form>

              </div>
          </div>
      </div>
  </div>
</div>

<script src="/javascripts/signUpValidation.js"></script>
