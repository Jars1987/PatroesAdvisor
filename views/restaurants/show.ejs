<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= restaurant.image %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.title %></h5>
        <p class="card-text"><%= restaurant.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Location: <%= restaurant.location %></li>
        <li class="list-group-item">Average Meal Price: â‚¬<%= restaurant.price %></li>
      </ul>
      <div class="card-body">
        <a href="/restaurants/<%= restaurant._id%>/edit" class="card-link btn btn-info">Edit</a>
        <form class="d-inline" action="/restaurants/<%= restaurant._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>
  </div>
  <div class="col-6">
    <h2>Leave a Review</h2>
    <form action="/restaurants/<%= restaurant._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input type="range" name="review[rating]" class="form-range" min="1" max="5" id="rating">
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
        <div class="valid-feedback"> Looks good!</div>
      </div>
      <button class="btn btn-success">Add Review</button>
    </form>
    <% for(let review of restaurant.reviews) {%> 
      <div class="mb-3 card">
        <div class="card-body">
          <h5 class="card-title">Rating <%= review.rating %> Stars</h5>
          <p class="card-text">Review: <%= review.body %> </p>
          <form action="/restaurants/<%= restaurant._id%>/reviews/<%= review._id %>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger">Delete</button>
          </form>
       </div>
      </div>
      <% } %> 
  </div>
</div>

  
